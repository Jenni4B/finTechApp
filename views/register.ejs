<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registration Form</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    colors: {
                        primary: '#3b82f6',
                    }
                }
            }
        }
    </script>
</head>

<body class="bg-gray-900 text-gray-100 min-h-screen flex items-center justify-center">
    <header class="p-4">

        <nav class="flex justify-between items-center">
            <a href="/" class="text-2xl font-bold text-primary">FinTech</a>
        </nav>

    </header>
    
        <div class="max-w-md w-full bg-gray-800 p-8 rounded-lg shadow-lg">
            <h1 class="text-2xl font-bold mb-6 text-center">Create an Account</h1>
            <form action="#" method="POST" class="space-y-4">
                <!-- First Name & Last Name -->
                <div class="flex space-x-4">
                    <input 
                        type="text" 
                        name="first_name" 
                        placeholder="First Name" 
                        class="w-full bg-gray-700 text-gray-100 border border-gray-600 rounded px-4 py-2 focus:outline-none focus:ring focus:ring-primary"
                    />
                    <input 
                        type="text" 
                        name="last_name" 
                        placeholder="Last Name" 
                        class="w-full bg-gray-700 text-gray-100 border border-gray-600 rounded px-4 py-2 focus:outline-none focus:ring focus:ring-primary"
                    />
                </div>
                <!-- Email -->
                <input 
                    type="email" 
                    name="email" 
                    placeholder="Email" 
                    class="w-full bg-gray-700 text-gray-100 border border-gray-600 rounded px-4 py-2 focus:outline-none focus:ring focus:ring-primary"
                />
                <!-- Password -->
                <input 
                    type="password" 
                    name="password" 
                    placeholder="Password" 
                    class="w-full bg-gray-700 text-gray-100 border border-gray-600 rounded px-4 py-2 focus:outline-none focus:ring focus:ring-primary"
                />
                <!-- Re-Enter Password -->
                <input 
                    type="password" 
                    name="confirm_password" 
                    placeholder="Re-Enter Password" 
                    class="w-full bg-gray-700 text-gray-100 border border-gray-600 rounded px-4 py-2 focus:outline-none focus:ring focus:ring-primary"
                />
                <!-- Buttons -->
                <div class="flex justify-between">

                    <a href="/login" class="bg-gray-600 text-white px-6 py-2 rounded hover:bg-gray-700 transition">Have an account?</a>

                    <button 
                        type="submit" 
                        class="bg-primary text-white px-6 py-2 rounded hover:bg-blue-600 transition"
                    >
                        Create Account
                    </button>

                </div>
            </form>
        </div>
</body>
</html>